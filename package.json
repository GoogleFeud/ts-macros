{
  "name": "ts-macros",
  "version": "2.5.0",
  "description": "A typescript transformer / plugin which allows you to write macros for typescript!",
  "main": "dist/index.js",
  "bin": "dist/cli/index.js",
  "dependencies": {
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.10",
    "@types/ts-expose-internals": "npm:ts-expose-internals@^5.1.6",
    "@types/yargs-parser": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4.3.7",
    "diff": "^5.1.0",
    "eslint": "^7.32.0",
    "mocha": "^9.2.2",
    "ts-patch": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "typescript": "4.7.x || 4.8.x || 4.9.x || 5.0.x || 5.1.x"
